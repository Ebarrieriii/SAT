@model IEnumerable<SAT.DATA.EF.Student>

@{
    ViewBag.Title = "Students";
}

@Html.Partial("_BannerPartial")
@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "mt-2 btn btn-primary"})
</p>
}
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.FullName)</th>
        <th>
            @Html.DisplayNameFor(model => model.Major)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentStatus.SSName)
        </th>
     
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.PhotoUrl)*@
                <img src="~/Content/assets/img/students/t_@item.PhotoUrl" alt="@item.FirstName" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentStatus.SSName)
            </td>
            <td>

                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Edit", "Courses", new { id = item.StudentId })"><i class="fas fa-edit"></i></a>

                    <br />
                }
                <a href="@Url.Action("Details", "Students", new { id=item.StudentId })"><i class="fas fa-info-circle"></i></a>

                <br />

                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Delete", "Students", new { id = item.StudentId })">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                }
                </td>
        </tr>
    }

</table>

