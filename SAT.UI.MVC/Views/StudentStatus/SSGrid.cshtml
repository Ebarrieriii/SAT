        </tr>
    }

</table>


<section class="products section">
    <div class="container">
        <div class="row">
        </div>
        <div class="row">

            @foreach (var item in Model)
            {


                <div class="col-md-4  col-sm-6 col-xs-6 product">
                    <div class="product-item">
                        <div class="product-thumb">
                            <a href=""@Url.Action("Details", "StudentStatuses", new { id = item.SSID })" class="course-img">
        
                            </a>
                            <div class="preview-meta">
                                <ul>
                                    <li>
                                        <a href="@Url.Action("Details", "StudentStatuses", new {id = item.SSID})">
                                            <i class="tf-ion-ios-search-strong"></i>
                                        </a>
                                    </li>>
                                    <li>
                                        @* Figure out how to add to cart *@
                                        <a href="@Url.Action("Index", "ShoppingCart")"><i class="tf-ion-android-cart"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="product-content">
                            <h4> <a class="course-title" href="@Url.Action("Details", "StudentStatuses", new {id = item.SSID})">@item.SSName</a></h4>
                            <p class="price">@Html.DisplayFor(model => item.SSDescription)</p>
                        </div>
                    </div>
                 
                </div>
            }

           

        </div>
    </div>
</section>


<div id="bookGrid">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6 col-xs-6 book">
            <div class="course">
                <a href="@Url.Action("Details", "StudentStatuses", new { id = item.SSID })" class="course-img">

                    <i class="course-link-icon fa fa-link"></i>
                </a>
                <a class="course-title" href="@Url.Action("Details", "StudentStatuses", new {id = item.SSID})">@item.SSName</a>
                <div class="course-details">
                    @* Below we check to see if the Genre is null. If it is not null, we will generate a span that shows the genre. *@
                    @if (item.SSName != null)
                    {
                        <span class="course-category">@Html.DisplayFor(model => item.Students)</span>
                    }
                    <span class="course-price course-free">@Html.DisplayFor(model => item.SSDescription)</span>
                </div>
            </div>
        </div>
    }
</div>


