@model IEnumerable<SAT.DATA.EF.ScheduledClass>

@{
    ViewBag.Title = "Classes";
}

@Html.Partial("_BannerPartial")

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class = "mt-2 btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstructorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduledClassStatus.SCSName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InstructorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduledClassStatus.SCSName)
        </td>
        <td>
            <a href="@Url.Action("Edit", "ScheduledClasses", new { id=item.ScheduledClassId })"><i class="fas fa-edit"></i></a>

            <br />

            <a href="@Url.Action("Details", "ScheduledClasses", new { id=item.ScheduledClassId })"><i class="fas fa-info-circle"></i></a>

            <br />
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Delete", "ScheduledClasses", new { id=item.ScheduledClassId })">
                    <i class="fas fa-trash-alt"></i>
                </a>
            }
        </td>
    </tr>
}

</table>
